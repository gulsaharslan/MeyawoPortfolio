
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Templates/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Templates/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Templates/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Templates/skydash/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Templates/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/skydash/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Templates/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Templates/skydash/images/favicon.png" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Static Modern Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Nunito', sans-serif;
        }

        .dashboard-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            }

        .card-icon {
            font-size: 30px;
            width: 60px;
            height: 60px;
            line-height: 60px;
            text-align: center;
            border-radius: 30px;
            color: #fff;
            margin: 20px auto 10px;
        }

        .bg-primary {
            background-color: #007bff;
        }

        .bg-success {
            background-color: #28a745;
        }

        .bg-info {
            background-color: #17a2b8;
        }

        .bg-danger {
            background-color: #dc3545;
        }

        .chart-container {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 20px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container-scroller">

        <div class="main-panel">

            <div class="row">
                <div class="col-md-3 mb-4 stretch-card transparent">
                    <div class="card card-tale">
                        <div class="card-body">
                            <p class="mb-4">Proje sayısı</p>
                            <p class="fs-30 mb-2">@ViewBag.v2</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4 stretch-card transparent">
                    <div class="card card-dark-blue">
                        <div class="card-body">
                            <p class="mb-4">Kategori sayısı</p>
                            <p class="fs-30 mb-2">@ViewBag.v1</p>
                        </div>
                    </div>
                </div>


                <div class="col-md-3 mb-4 stretch-card transparent">
                    <div class="card card-light-blue">
                        <div class="card-body">
                            <p class="mb-4">Okunmamış Mesaj</p>
                            <p class="fs-30 mb-2">@ViewBag.v5</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4 stretch-card transparent">
                    <div class="card card-light-danger">
                        <div class="card-body">
                            <p class="mb-4">Son Proje </p>
                            <p class="fs-25 mb-2">@ViewBag.v6</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Chart Container -->
            <div class="chart-container mt-5">
                <canvas id="staticDashboardChart"></canvas>
            </div>
        </div>

        <script>
            var ctx = document.getElementById('staticDashboardChart').getContext('2d');
            var staticDashboardChart = new Chart(ctx, {
                type:'bar',
                data: {
                    labels: ["Asp.Net", "C#", "Asp.Net Core", "React"],
                    datasets: [{
                        label: 'Proje Kategorileri',
                        backgroundColor: 'rgba(257, 105, 78, 0.6)',
                        borderColor: 'rgba(257, 105, 78, 1)',
                        data: [5,3,1,2],
                        fill: true,
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    </div>
                   
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Templates/skydash/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Templates/skydash/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Templates/skydash/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Templates/skydash/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/Templates/skydash/js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Templates/skydash/js/off-canvas.js"></script>
    <script src="~/Templates/skydash/js/hoverable-collapse.js"></script>
    <script src="~/Templates/skydash/js/template.js"></script>
    <script src="~/Templates/skydash/js/settings.js"></script>
    <script src="~/Templates/skydash/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/Templates/skydash/js/dashboard.js"></script>
    <script src="~/Templates/skydash/js/Chart.roundedBarCharts.js"></script>
    <!-- End custom js for this page-->
</body>

</html>

