@model List<MeyawoPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Hakkımda</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
      
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.AboutID</td>
            <td>@x.Title</td>
            <td>@x.Description</td>
            <td>
            <a href="/About/UpdateAbout/@x.AboutID" class="btn btn-success">Güncelle</a></td>
          

        </tr>
    }

</table>