@model MeyawoPortfolio.Models.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Hakkımda Güncelle</h2>

<form method="post">
    <label>#</label>
    <input type="text" name="AboutID" readonly value="@Model.AboutID" class="table table-bordered" />
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "table table-bordered" })    <br />
    @Html.TextAreaFor(x => x.Description, new { @class = "table table-bordered" })    <br />


    <button class="btn btn-info">Hakkımda Güncelle</button>

</form>

