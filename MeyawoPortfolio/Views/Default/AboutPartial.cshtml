@model List<MeyawoPortfolio.Models.TblAbout>

@foreach(var item in Model) { 
<div class="about">
    <div class="about-img-holder">
        <img src="@item.ImageUrl" class="rounded-circle about-img float-right" style="width:250px" 
             alt="Profile Photo">
    </div>
    <div class="about-caption">
        
        <h2 class="section-title mb-3">@item.Title</h2>
        <p>
            @item.Description
        </p>
        <a href="~/Content/Gülşah Arslan-Çevre Mühendisi.pdf" class="btn-rounded btn btn-primary mt-4" download>CV İndir</a>
    </div>
</div>
}