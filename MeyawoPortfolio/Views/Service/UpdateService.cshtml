@model MeyawoPortfolio.Models.TblService

@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Güncelle</h2>

<form method="post">
    <label>#</label>
    @Html.TextBoxFor(x => x.ServiceID, new { @class = "table table-bordered" })
    <br />
    <label>Hizmet Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "table table-bordered" })
    <br />
    <label>Hizmet Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-bordered" })
    <br />
    <label>Hizmet Açıklaması</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "table table-bordered" })    <br />
    <br />
    <button class="btn btn-info">Hizmeti Güncelle</button>

</form>